@model TaleonLtd.Web.ViewModels.Customers.CustomerInputModel



<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Create Account</h4>
            <p class="text-center">Get started with your free account</p>
            <p>
                <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i>   Login via Twitter</a>
                <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i>   Login via facebook</a>
            </p>
            <p class="divider-text">
                <span class="bg-light">OR</span>
            </p>
            <form asp-controller="Customers" asp-action="Register" methos="post">
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <input asp-for="Firstname" class="form-control" placeholder="First name" type="text">
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <input asp-for="Surname" class="form-control" placeholder="Surname" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email address" type="email">
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                    </div>
                    <select class="custom-select" style="max-width: 120px;">
                        <option selected="">+44</option>
                        <option value="1">+34</option>

                    </select>
                    <input name="phoneNumber" class="form-control" placeholder="Phone number" type="text">
                </div> <!-- form-group// -->
                <!--<div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-building"></i> </span>
                    </div>-->
                    @*<select class="form-control">
                        <option selected=""> Select job type</option>
                        <option>Designer</option>
                        <option>Manager</option>
                        <option>Accaunting</option>
                    </select>*@
                <!--</div>--> <!-- form-group end.// -->
                <div class="form-group input-group">
                    <!-- Postcode field -->
                    <div id="postcode_lookup"></div>
                    <!-- Add to your existing form -->
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-address-card-o"></i> </span>
                    </div>
                    <input id="line1" class="form-control" asp-for="FirstLine" placeholder="First Address Line" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-address-card-o"></i> </span>
                    </div>
                    <input id="line2" class="form-control" asp-for="SecondLine" placeholder="Second Address Line" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-address-card-o"></i> </span>
                    </div>
                    <input id="line3" class="form-control"  asp-for="ThirdLine" placeholder="Third Address Line" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa-solid fa-map-location"></i> </span>
                    </div>
                    <input id="town" class="form-control" asp-for="Town" placeholder="Town" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa-solid fa-map-location"></i> </span>
                    </div>
                    <input id="county" class="form-control"asp-for="Country" placeholder="County" type="text">
                </div>

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class=""></i> </span>
                    </div>
                    <input id="postcode" class="form-control"asp-for="Postcode" placeholder="Postcode" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control"asp-for="Password"  asp-validation-for="Password" placeholder="Create password" type="password">
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control"asp-for="RepeatePassword"  asp-validation-for="Password" placeholder="Repeat password" type="password">
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
                </div> <!-- form-group// -->
                <p class="text-center">Have an account? <a href="">Log In</a> </p>

            </form>
        </article>
    </div>  
</div>
<!--container end.//-->
<script src="jquery.js"></script>
<script src="https://use.fontawesome.com/ed1c054027.js"></script>
