<script>
    $('#postcode_lookup').getAddress(
        {
            api_key: '7CUb3z3sqEOPo6SP2f2Bkw31907',
            output_fields: {
                line_1: '#line1',
                line_2: '#line2',
                line_3: '#line3',
                post_town: '#town',
                county: '#county',
                postcode: '#postcode'
            }
        });
</script>
